@model SistemaVenta.AplicacionWeb.Models.ViewModels.VMUsuario;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ES">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Mi Tienda - Login</title>
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.css" rel="stylesheet">
    <link href="~/vendor/toastr/toastr.min.css" rel="stylesheet">
    <link href="~/vendor/sweetalert/sweetalert.css" rel="stylesheet">
</head>
<body class="bg-gradient-info">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">

                            <div class="col-lg-5 d-none d-lg-block bg-register-img"></div>
                            <div class="col-lg-7">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Registrar Usuario</h1>
                                    </div>
                                    <form class="user" asp-controller="Acceso" asp-action="Registrar" method="post">
                                        <input type="hidden" value="0" id="txtId" asp-for="IdUsuario">
                                        <div class="form-group">
                                            <label for="txtNombre">Nombre</label>
                                            <input type="text" class="form-control form-control-user input-validar" id="txtNombre" name="Nombre" placeholder="Nombre" asp-for="Nombre">
                                        </div>
                                        <div class="form-group">
                                            <label for="txtCorreo">Correo</label>
                                            <input type="email" class="form-control form-control-user input-validar" id="txtCorreo" name="Correo" placeholder="Correo" asp-for="Correo">
                                        </div>
                                        <div class="form-group">
                                            <label for="txtTelefono">Telefono</label>
                                            <input type="text" class="form-control form-control-user" placeholder="Telefono" id="txtTelefono" name="Telefono" asp-for="Telefono">
                                        </div>
                                        <div class="form-group">
                                            <label for="cboRol">Rol</label>
                                            <select class="form-control form-control-md" id="cboRol" asp-for="IdRol">
                                                <option value="1">Administrador</option>
                                                <option value="2">Empleado</option>
                                                <option value="3">Supervisor</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="cboEstado">Estado</label>
                                            <select class="form-control form-control-md" id="cboEstado" asp-for="EsActivo">
                                                <option value="1">Activo</option>
                                                <option value="0">No Activo</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="txtFoto">Foto</label>
                                            <input class="form-control-file" type="file" id="txtFoto" name="UrlFoto" asp-for="UrlFoto"/>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Registrar 
                                        </button>
                                    </form>
                                    <hr>

                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("RestablecerClave","Acceso")">¿Olvidó su contraseña?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("Login","Acceso")">Iniciar Sesión</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.js"></script>
    <script src="~/vendor/toastr/toastr.min.js"></script>
    <script src="~/vendor/sweetalert/sweetalert.js"></script>
    <script src="~/vendor/loadingoverlay/loadingoverlay.min.js"></script>

    <script src="~/js/vistas/NuevoUsuario.js"></script>

</body>
</html>